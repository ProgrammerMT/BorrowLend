@model IEnumerable<BorrowLend.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary w-75" asp-controller="Expense" asp-action="Create">Create New Expense</a>
        </div>
    </div>
    <br />
    @if (Model.Any())
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Expense Name</th>
                    <th>Amount</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td width="30%">@expense.ExpenseName</td>
                        <td width="30%">@expense.Amount</td>
                        <td width="25%">
                            <a class="btn btn-success m-1" asp-controller="Expense" asp-action="Update" asp-route-id="@expense.ID">Update</a>
                            <a class="btn btn-danger m-1" asp-controller="Expense" asp-action="Delete" asp-route-id="@expense.ID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No expenses available.</p>
    }
</div>
