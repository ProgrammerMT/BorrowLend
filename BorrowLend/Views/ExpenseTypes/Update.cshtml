@model BorrowLend.Models.ExpenseType

<h2>Update Expense Type</h2>

<form asp-action="Update" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="ExpenseTypeName"></label>
        <input asp-for="ExpenseTypeName" class="form-control" />
        <span asp-validation-for="ExpenseTypeName" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="ID" />
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
